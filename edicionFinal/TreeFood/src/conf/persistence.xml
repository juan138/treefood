<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="TreeFoodPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.TF.persistencia.Personas</class>
    <class>com.TF.persistencia.Sucursales</class>
    <class>com.TF.persistencia.Clientes</class>
    <class>com.TF.persistencia.AreasSucursales</class>
    <class>com.TF.persistencia.Reservas</class>
    <class>com.TF.persistencia.SucursalesRestaurantes</class>
    <class>com.TF.persistencia.Restaurantes</class>
    <class>com.TF.persistencia.EmpleadosSucursales</class>
    <class>com.TF.persistencia.Empleados</class>
    <class>com.TF.persistencia.TipoPersonas</class>
    <class>com.TF.persistencia.Municipios</class>
    <class>com.TF.persistencia.Usuarios</class>
    <class>com.TF.persistencia.Departamentos</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/restaurantes?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
